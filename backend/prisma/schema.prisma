generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Business {
  id              Int               @id @default(autoincrement())
  name            String
  ownerId         Int               @unique
  createdAt       DateTime          @default(now())
  owner           User              @relation("BusinessOwner", fields: [ownerId], references: [id])
  customer        Customer[]
  debts           Debt[]
  externalInvoice ExternalInvoice[]
  store           Store[]
  transferHistory TransferHistory[]
  users           User[]            @relation("BusinessUsers")
  warehouse       Warehouse[]
  storeProduct    StoreProduct[]
}

model User {
  id              Int               @id @default(autoincrement())
  fullName        String
  email           String            @unique
  password        String
  role            Role
  businessId      Int?
  createdAt       DateTime          @default(now())
  ownedBusiness   Business?         @relation("BusinessOwner")
  externalInvoice ExternalInvoice[]
  sale            Sale[]
  sessions        Session[]
  transferHistory TransferHistory[]
  pushToken       PushToken[]

  business        Business?         @relation("BusinessUsers", fields: [businessId], references: [id])
}

model Session {
  id        String   @id @default(uuid())
  userId    Int
  expiresAt DateTime
  user      User     @relation(fields: [userId], references: [id])

  @@index([userId])
}

model Warehouse {
  id              Int                @id @default(autoincrement())
  name            String
  location        String
  businessId      Int
  createdAt       DateTime           @default(now())
  updatedAt       DateTime           @updatedAt
  transferHistory TransferHistory[]
  business        Business           @relation(fields: [businessId], references: [id])
  goods           WarehouseProduct[]

  @@unique([name, businessId])
}

model WarehouseProduct {
  id           Int       @id @default(autoincrement())
  name         String
  quantity     Int
  costPrice    Float
  sellingPrice Float
  warehouseId  Int
  dateAdded    DateTime  @default(now())
  warehouse    Warehouse @relation(fields: [warehouseId], references: [id])

  @@unique([name, warehouseId])
}

model Store {
  id              Int               @id @default(autoincrement())
  name            String
  location        String
  businessId      Int
  createdAt       DateTime          @default(now())
  updatedAt       DateTime          @updatedAt
  sale            Sale[]
  business        Business          @relation(fields: [businessId], references: [id])
  products        StoreProduct[]
  transferHistory TransferHistory[]
}

model StoreProduct {
  id        Int        @id @default(autoincrement())
  name      String
  quantity  Int
  price     Float
  storeId   Int
  businessId  Int?
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  items     SaleItem[]
  store     Store      @relation(fields: [storeId], references: [id])
  business  Business?   @relation(fields: [businessId], references: [id])

  @@unique([name, storeId])
}

model TransferHistory {
  id              Int       @id @default(autoincrement())
  productName     String
  quantity        Int
  price           Float
  warehouseId     Int
  storeId         Int
  businessId      Int
  transferredById Int
  createdAt       DateTime  @default(now())
  business        Business  @relation(fields: [businessId], references: [id])
  store           Store     @relation(fields: [storeId], references: [id])
  transferredBy   User      @relation(fields: [transferredById], references: [id])
  warehouse       Warehouse @relation(fields: [warehouseId], references: [id])
}

model Sale {
  id        Int        @id @default(autoincrement())
  storeId   Int
  soldById  Int
  customerId  Int?
  customerName String?
  total     Int
  amountPaid Int?
  balance    Int?
  createdAt DateTime   @default(now())
  customer  Customer?   @relation(fields: [customerId], references: [id])
  soldBy    User       @relation(fields: [soldById], references: [id])
  store     Store      @relation(fields: [storeId], references: [id])
  items     SaleItem[]
}

model SaleItem {
  id             Int          @id @default(autoincrement())
  saleId         Int
  storeProductId Int
  name           String?
  productId      Int?
  quantity       Int
  price          Int
  sale           Sale         @relation(fields: [saleId], references: [id])
  storeProduct   StoreProduct @relation(fields: [storeProductId], references: [id])
}

model Customer {
  id         Int      @id @default(autoincrement())
  fullName   String
  phone      String
  address    String?
  businessId Int
  createdAt  DateTime @default(now())
  business   Business @relation(fields: [businessId], references: [id])
  debts      Debt[]
  sale       Sale[]
}

model Debt {
  id          Int      @id @default(autoincrement())
  totalAmount Int
  amountPaid  Int      @default(0)
  balance     Int
  isCleared   Boolean  @default(false)
  customerId  Int
  businessId  Int
  createdAt   DateTime @default(now())
  business    Business @relation(fields: [businessId], references: [id])
  customer    Customer @relation(fields: [customerId], references: [id])
}

model ExternalInvoice {
  id           Int                   @id @default(autoincrement())
  createdAt    DateTime              @default(now())
  businessId   Int
  createdById  Int
  customerName String
  status       InvoiceStatus         @default(DRAFT)
  total        Float
  Business     Business              @relation(fields: [businessId], references: [id])
  createdBy    User                  @relation(fields: [createdById], references: [id])
  items        ExternalInvoiceItem[]

  @@index([businessId])
}

model ExternalInvoiceItem {
  id        Int             @id @default(autoincrement())
  invoiceId Int
  name      String
  price     Float
  quantity  Int
  invoice   ExternalInvoice @relation(fields: [invoiceId], references: [id], onDelete: Cascade)
}

enum Role {
  SUPERADMIN
  CLIENT
}

enum InvoiceStatus {
  DRAFT
  SENT
  PAID
}


model PushToken {
  id         Int    @id @default(autoincrement())
  userId     Int    @unique
  token      String
  createdAt DateTime @default(now())
  updatedAt DateTime?   @updatedAt

  user User @relation(fields: [userId], references: [id])
}
